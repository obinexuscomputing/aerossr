{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist/temp",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/"],
      "@types/*": ["src/types/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}