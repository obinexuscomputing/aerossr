{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "types": ["jest", "node"],
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",
      "tests/**/*",
      "jest.setup.ts"
    ]
  }