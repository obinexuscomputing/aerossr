{
  "name": "@obinexuscomputing/aerossr",
  "version": "0.1.0",
  "type": "module",
  "description": "A Node.js library for server-side rendering (SSR) with TypeScript.",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./cli": {
      "import": "./dist/esm/cli/index.js",
      "require": "./dist/cjs/cli/index.js"
    }
  },
  "bin": {
    "aerossr": "./dist/cjs/cli/index.js"
  },
  "files": [
    "dist",
    "src",
    "scripts",
    "bin"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup -c  && node scripts/make-cli-executable.js && npm run link:package",
    "clean": "rimraf dist coverage",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prepublishOnly": "npm run test:ci && npm run build && npm run lint:fix",
    "prepare": "npm run build ",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "postbuild": "node -e \"require('fs').chmodSync('dist/cli/index.js', '755')\" ",
    "link:package": "npm link @obinexuscomputing/aerossr"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1"
  },
  "dependencies": {
    "@types/node": "^22.10.3",
    "commander": "^13.0.0"
  }
}
