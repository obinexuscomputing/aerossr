{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "rootDir": "src",
      "outDir": "./dist/types",
      "paths": {
        "@/*": ["src/*"],
        "@utils/*": ["src/utils/*"],
        "@types/*": ["src/types/*"]
      },
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  