{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src", // Base URL set to the 'src' directory
    "paths": {
      "@/*": ["*"], // Alias '@' to the 'src' directory
      "@utils/*": ["utils/*"], // Alias '@utils' to 'src/utils'
      "@types/*": ["@types/*"] // Alias '@types' to 'src/@types'
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
